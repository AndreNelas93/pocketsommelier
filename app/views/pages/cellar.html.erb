<div class="container d-flex justify-content-center mt-3">
  <%= image_tag "logofabio.png", style:"height: 80px;" %>
</div>
<hr>

<div class="container-filters-cellar">
  <p class="btn-filter">all</p>
  <p class="btn-filter">red</p>
  <p class="btn-filter">white</p>
  <p class="btn-filter">ros√©</p>
</div>

<div class="container-margin-2">
  <% @wines.each do |wine| %>
    <%= link_to wine_path(wine) do %>
      <div class="card-product-cellar">
        <%= cl_image_tag wine.photo.key %>
        <div class="card-product-infos">
          <h3><%= "#{wine.name}, #{wine.year}" %></h3>
          <p><%= "#{wine.region}, #{wine.country}." %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
