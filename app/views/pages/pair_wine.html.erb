<%= image_tag "wine-taste.jpg", class:"banner" %>
<%= link_to root_path do %>
  <%= icon('fa-solid', 'arrow-left', class: "back-arrow")%>
<% end %>
<div class="form-position">
  <div class="container-pair-h1">
    <h1>Pair Wine</h1>
  </div>
  <%= form_with url: recipes_path, method: :get, data: { turbo: false } do |f| %>
    <div class="d-flex justify-content-center">
      <%= text_field_tag :wine, params[:wine], autocomplete: :off, class: "form-control search-input", list: "wines" %>
      <datalist id="wines">
        <% @wines.each do |wine| %>
          <option value="<%= wine.name %>">
        <% end %>
      </datalist>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit "Pair", class:"btn-large btn-position" %>
    </div>
  <% end %>
</div>
